{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "types",
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "@webb-tools/*": ["packages/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs"
    }
  },
  "exclude": [ "fixtures/**/**/*" ],
  "include": [
    "packages/**/*",
    "scripts/**/*",
    "tasks/**/*",
    "test/**/*",
    "test/**/**/*",
    "build/typechain/**/*",
    "types/**/*",
  ],
  "files": ["hardhat.config.ts"]
}
