{
    "name": "@semaphore-protocol/cli-template-contracts-foundry",
    "version": "4.7.0",
    "description": "Semaphore Foundry template.",
    "license": "Unlicense",
    "devDependencies": {
        "@semaphore-protocol/contracts": "^4.7.0",
        "@zk-kit/lean-imt.sol": "^2.0.0",
        "forge-std": "github:foundry-rs/forge-std#v1.9.4",
        "poseidon-solidity": "0.0.5",
        "solhint": "^4.1.1"
    },
    "scripts": {
        "build": "forge build",
        "fmt": "forge fmt",
        "fmt:check": "forge fmt --check",
        "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
        "clean": "forge clean",
        "lint:sol": "forge fmt --check && yarn solhint \"{script,src,test}/**/*.sol\"",
        "lint": "pnpm run lint:sol && bun run prettier:check",
        "prettier:check": "prettier --check \"**/*.{json,md,svg,yml}\"",
        "prettier:write": "prettier --write \"**/*.{json,md,svg,yml}\"",
        "test": "forge test",
        "test:report-gas": "forge test --gas-report --mp \"./test/integration/**/*.sol\" --nmt \"test(Fuzz)?_RevertWhen_\\w{1,}?\"",
        "test:optimized": "pnpm run build:optimized && FOUNDRY_PROFILE=test-optimized forge test"
    },
    "files": [
        "src",
        "test",
        "script",
        "package.json",
        "foundry.toml",
        "remappings.txt"
    ],
    "publishConfig": {
        "access": "public"
    },
    "packageManager": "yarn@4.1.0"
}
